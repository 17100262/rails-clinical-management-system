<div class="container-fluid container-top" style="">
  
  <div class="container">
      
      <div class="table-responsive">
      <table class="table white-bg border-left-right border-top-bottom">
        <thead>
          <tr>
            <th>Utilizador</th>
            <th>Última mensagem</th>
            <th>Hora</th>
            <th>Lida?</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @chats.each do |chat| %>
            <tr class="inbx-tr">
              <% last_message  = chat.messages.order('created_at ASC').last if not chat.messages.blank? %>
              <td><%= chat.users.select{|u| u!=current_user}.first.name %> </td>
              <td><%= last_message.content if last_message %></td>
              <td> <%= time_ago_in_words( last_message.created_at)+ " atrás" if last_message %></td>
              <td><%= last_message.read %></td>
              <td><%= link_to '<i class="fas fa-reply-all icon-chat"></i>'.html_safe, chat, class: "" %></td>
              <td><%= link_to '<i class="far fa-trash-alt icon-danger" title="Delete"></i>'.html_safe, chat, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, chat %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <br>
</div>
</div>
