<div id="hide_till_jquery_at_show_page_runs", class="hide">
	<%= render 'form', clinical_case: @clinical_case %>
</div>

<script>
    
      $(document).ready(function(){
        $('.ibox-title').text("");								  	  // replaces original h5 title by empty simple text
        $( "<h5>Consultar caso</h5>" ).appendTo( ".ibox-title" );	  // inserts a new h5 into it
        $('.fileinput').remove(); 								  	  // remove file upload fields
	    $("#clinical_case_form :input").prop("disabled", true);   	  // disable all fields
	    $("#action_buttons").remove();   	                          // remove action buttons
	    $("#hide_till_jquery_at_show_page_runs").removeClass("hide"); // everything is done, now page can be shown
       });

</script>