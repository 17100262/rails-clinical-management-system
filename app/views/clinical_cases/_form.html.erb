<div class="container-fluid container-top" style="">

  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h5>New Clinical Case</h5>
          </div>
          <div class="ibox-content">
            <%= form_with(model: clinical_case, local: true, class:"form-horizontal") do |form| %>
                <% if clinical_case.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(clinical_case.errors.count, "error") %> prohibited this clinical_case from being saved:</h2>
              
                    <ul>
                    <% clinical_case.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                   
                  </div>
                <% end %>
                  <div class="form-group"><label class="col-lg-12 control-label">Date of Birth</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_birth, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Date of Birth</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_diagnostic, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Histology Type</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :histology_type,"Ductal",:value => "Ductal" %>
                      <%= form.label :histology_type, "Ductal", :value => "Ductal"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :histology_type,"Lobular",:value => "Lobular" %>
                      <%= form.label :histology_type, "Lobular", :value => "Lobular"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :histology_type,"Outro",:value => "Outro" %>
                      <%= form.label :histology_type, "Outro", :value => "Outro"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Histology Level</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :histology_level,1,:value => 1 %>
                      <%= form.label :histology_level, "1", :value => 1  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :histology_level,2,:value => 2 %>
                      <%= form.label :histology_level, "2", :value => 2  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :histology_level,3,:value => 3 %>
                      <%= form.label :histology_level, "3", :value => 3  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Estrogen Receptors</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :estrogen_receptors,"positives",:value => "positives" %>
                      <%= form.label :estrogen_receptors, "positives", :value => "positives"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :estrogen_receptors,"negatives",:value => "negatives" %>
                      <%= form.label :estrogen_receptors, "negatives", :value => "negatives"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :estrogen_receptors,"unknown",:value => "unknown" %>
                      <%= form.label :estrogen_receptors, "unknown", :value => "unknown"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Progesterone Receptors</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :progesterone_receptors,"positives",:value => "positives" %>
                      <%= form.label :progesterone_receptors, "positives", :value => "positives"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :progesterone_receptors,"negatives",:value => "negatives" %>
                      <%= form.label :progesterone_receptors, "negatives", :value => "negatives"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :progesterone_receptors,"unknown",:value => "unknown" %>
                      <%= form.label :progesterone_receptors, "unknown", :value => "unknown"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">HER2</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :hher22,"positive",:value => "positive" %>
                      <%= form.label :hher22, "positive", :value => "positive"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :hher22,"negative",:value => "negative" %>
                      <%= form.label :hher22, "negative", :value => "negative"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">KI67</label>
      
                      <div class="col-lg-12"><%= form.number_field :ki67, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Estadiamento Clinico</label>
      
                      <div class="col-lg-12"><%= form.text_area :estadiamento_clinico, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Neoadjuvant Systemic Treatment</label>
      
                      <div class="col-lg-12"><div class="i-checks"><%= form.radio_button :neoadjuvant_systemic_treatment,"QT",:value => "QT" %>
                      <%= form.label :neoadjuvant_systemic_treatment, "QT", :value => "QT"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :neoadjuvant_systemic_treatment ,"HT",:value => "HT" %>
                      <%= form.label :neoadjuvant_systemic_treatment , "HT", :value => "HT"  %></div>
                     </div>
                      <div class="col-lg-12"><div class="i-checks"><%= form.radio_button :neoadjuvant_systemic_treatment ,"RT",:value => "RT" %>
                      <%= form.label :neoadjuvant_systemic_treatment , "RT", :value => "RT"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Surgery Date</label>
      
                      <div class="col-lg-12"><%= form.date_field :surgery_date, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Surgery Type</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :surgery_type,"Tumorectomia",:value => "Tumorectomia" %>
                      <%= form.label :surgery_type, "Tumorectomia", :value => "Tumorectomia"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :surgery_type ,"Mastectomia",:value => "Mastectomia" %>
                      <%= form.label :surgery_type , "Mastectomia", :value => "Mastectomia"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Sentinel Ganglion</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :sentinel_ganglion,"Yes",:value => "Yes" %>
                        <%= form.label :sentinel_ganglion, "Yes", :value => "Yes"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :sentinel_ganglion ,"No",:value => "No" %>
                        <%= form.label :sentinel_ganglion , "No", :value => "No"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Axillary Emptying</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :axillary_emptying,"Yes",:value => "Yes" %>
                      <%= form.label :axillary_emptying, "Yes", :value => "Yes"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :axillary_emptying ,"No",:value => "No" %>
                      <%= form.label :axillary_emptying , "No", :value => "No"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Adjuvant Chemotherapy</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :adjuvant_chemotherapy,"Yes",:value => "Yes" %>
                        <%= form.label :adjuvant_chemotherapy, "Yes", :value => "Yes"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :adjuvant_chemotherapy ,"No",:value => "No" %>
                        <%= form.label :adjuvant_chemotherapy , "No", :value => "No"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Adjuvant Radiotherapy</label>
      
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :adjuvant_radiotherapy,"Yes",:value => "Yes" %>
                        <%= form.label :adjuvant_radiotherapy, "Yes", :value => "Yes"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :adjuvant_radiotherapy ,"No",:value => "No" %>
                        <%= form.label :adjuvant_radiotherapy , "No", :value => "No"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Estadiamento Clinico</label>
      
                      <div class="col-lg-12"><%= form.text_area :estadiamento_clinico, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Neoadjuvant Systemic Treatment</label>
                      
                      <div class="col-lg-12"><div class="click-radio"><%= radio_button_tag("clinical_case[neoadjuvant_systemic_treatment]", 
                      "Yes" , checked = false, options = {id: "yes_neoadjuvant_systemic_treatment"})%> 
                      <%= form.label :neoadjuvant_systemic_treatment, "Yes", :value => "Yes"  %> <br>
                      </div></div>
                      
                      
                      <div class="col-lg-12"><div class="not-click"><%= radio_button_tag("clinical_case[neoadjuvant_systemic_treatment]", 
                      "No" , checked = false, options = {})%> 
                      <%= form.label :neoadjuvant_systemic_treatment, "No", :value => "No"  %> <br>
                      </div></div>
                      
                      
                      
                        
                      
                      
      
                      <div class="col-lg-12 show-radio"><div class="i-checks"><%= form.radio_button :neoadjuvant_systemic_treatment,"QT",:value => "QT" %>
                      <%= form.label :neoadjuvant_systemic_treatment, "QT", :value => "QT"  %></div>
                      </div>
                      <div class="col-lg-12 show-radio"><div class="i-checks"> <%= form.radio_button :neoadjuvant_systemic_treatment ,"HT",:value => "HT" %>
                      <%= form.label :neoadjuvant_systemic_treatment , "HT", :value => "HT"  %></div>
                      </div>
                      <div class="col-lg-12 show-radio"><div class="i-checks"><%= form.radio_button :neoadjuvant_systemic_treatment ,"RT",:value => "RT" %>
                      <%= form.label :neoadjuvant_systemic_treatment , "RT", :value => "RT"  %></div>
                      </div>
                  </div>
                  <div class="row wrapper border-bottom  page-heading">
                    <div class="col-lg-12">
                        <h2>Adjuvent Hormone Therapy</h2>
                    </div>
                    
                </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Duration</label>
      
                      <div class="col-lg-12"><%= form.number_field :adjuvant_hormone_therapy_duration, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Treatment</label>
      
                      <div class="col-lg-12"><div class="i-checks"><%= form.radio_button :adjuvant_hormone_therapy_treatment ,"Tamoxifeno",:value => "Tamoxifeno" %>
                        <%= form.label :adjuvant_hormone_therapy_treatment , "Tamoxifeno", :value => "Tamoxifeno"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"> <%= form.radio_button :adjuvant_hormone_therapy_treatment ,"Inhibitor Aromatase",:value => "Inhibitor Aromatase" %>
                        <%= form.label :adjuvant_hormone_therapy_treatment , "Inhibitor Aromatase", :value => "Inhibitor Aromatase"  %></div>
                      </div>
                      <div class="col-lg-12"><div class="i-checks"><%= form.radio_button :adjuvant_hormone_therapy_treatment ,"Goserelina",:value => "Goserelina" %>
                        <%= form.label :adjuvant_hormone_therapy_treatment , "Goserelina", :value => "Goserelina"  %></div>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Date of IPO discharge</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_ipo_discharge, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Date of first follow up at MGF</label>
      
                      <div class="col-lg-12"><%= form.date_field :first_follow_up_at_mgf, class:"form-control" %>
                      </div>
                  </div>
                  <div class="row wrapper border-bottom  page-heading">
                    <div class="col-lg-12">
                        <h2>Date of imaging control</h2>
                    </div>
                    
                </div>
                  <div id="imaging_controls">
                    <%= form.fields_for :imaging_controls do |ff| %>
                        <%= render 'imaging_control_fields', f: ff %>
                    <% end %>
                    <div class="links">
                      <%= link_to_add_association 'Add Imaging control', form, :imaging_controls, class: "btn btn-primary" %>
                    </div>
                  </div>
                  <div class="row wrapper border-bottom  page-heading">
                    <div class="col-lg-12">
                        <h2>Date of Suspected Recurrence</h2>
                    </div>
                    
                </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Local Recurrence</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_suspected_recurrence_local_recurrence, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Collateral Breast Cancer</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_suspected_recurrence_collateral_breast_cancer, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Distance Metastasis</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_suspected_recurrence_distance_metastasis, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Second Neoplasm</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_suspected_recurrence_second_neoplasm, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Date of confirmation of Recurrence</label>
      
                      <div class="col-lg-12"><%= form.date_field :date_of_confirmation_of_recurrence, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Global Survival</label>
      
                      <div class="col-lg-12"><%= form.text_area :global_survival, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Specific Breast Cancer Survival</label>
      
                      <div class="col-lg-12"><%= form.text_area :Specif_breast_cancer_survival, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Last Contact or Death</label>
      
                      <div class="col-lg-12"><%= form.text_area :last_contact_or_death, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-12 control-label">Death Cause</label>
      
                      <div class="col-lg-12"><%= form.text_area :death_cause, class:"form-control" %>
                      </div>
                  </div>
                  <div class="row wrapper border-bottom  page-heading">
                    <div class="col-lg-12">
                        <h2>Satisfaction survey record</h2>
  
                        
                    </div>
                    
                </div>
                  <h3> At Discharge</h3>
                  <div class="form-group">
      
                      <div class="col-lg-12"><%= form.file_field :satisfaction_survey_record_discharge, class:"form-control" %>
                      </div>
                  </div>
                  <h3> After 1st follow-up </h3>
                  <div class="form-group">
      
                      <div class="col-lg-12"><%= form.file_field :satisfaction_survey_record_first, class:"form-control" %>
                      </div>
                  </div>
                  <h3> Next ones</h3>
                  <div class="form-group">
      
                      <div class="col-lg-12"><%= form.file_field :satisfaction_survey_record_next, class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-lg-12">
                        <%= form.submit "Submit Case", class:"btn btn-primary" %>
                      </div>
                  </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    

  </div>
  
</div>
