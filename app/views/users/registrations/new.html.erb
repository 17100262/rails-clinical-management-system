<div class="container-fluid container-top bg-covr" style="">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="ibox float-e-margin bg-frm-opcty">
          <div class="ibox-title">
              <h5>Sign Up</h5>
          </div>
          <div class="ibox-content">
              <%= form_for(resource, as: resource_name,  url: registration_path(resource_name),class:"form-horizontal") do |f| %>
                  <%= devise_error_messages! %>
                  <p>Register Now to Get Started.</p>
                  <div class="form-group row"><label class="col-lg-2 control-label">Email</label>
      
                      <div class="col-lg-10"><%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group row"><label class="col-lg-2 control-label">Name</label>
      
                      <div class="col-lg-10"><%= f.text_field :name, autocomplete: "name", required: true ,class:"form-control" %>
                      </div>
                  </div>
                  
                  <div class="form-group row"><label class="col-lg-2 control-label">Organization</label>
      
                      <div class="col-lg-10"><%= f.text_field :organization, required: true ,class:"form-control" %>
                      </div>
                  </div>
                  
                  <div class="form-group row"><label class="col-lg-2 control-label">About Me</label>
      
                      <div class="col-lg-10"><%= f.text_area :about_me ,class:"form-control" %>
                      </div>
                  </div>
                  
                  <div class="form-group row"><label class="col-lg-2 control-label">Gender</label>
      
                      <div class="col-lg-10">
                        <%= f.select(:gender, ["Male","Female"], { prompt: "Please Select Gender" },{required: true }) %>
                      </div>
                  </div>
                  
                  <div class="form-group row"><label class="col-lg-2 control-label">User Type</label>
      
                      <div class="col-lg-10">
                        <%= f.select(:user_type, ["Medic","Researcher","Other"], { prompt: "Please Select User Type"},{required: true }) %>
                      </div>
                  </div>
                  
                  <div class="form-group row"><label class="col-lg-2 control-label">Profile Picture</label>
      
                      <div class="col-lg-10">
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                              <div class="form-control" data-trigger="fileinput">
                                  
                              <span class="fileinput-filename"></span>
                              </div>
                              <span class="input-group-addon btn btn-default btn-file">
                                  <span class="fileinput-new">Select file</span>
                                  <%= f.file_field :profile_picture, required: true %>
                                  <input type="file" name="..."/>
                              </span>
                              <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                        </div> 
                      
                      </div>
                  </div>
                  
                  <div class="form-group row"><label class="col-lg-2 control-label">Password</label>
      
                      <div class="col-lg-10"><%= f.password_field :password, required: true, autocomplete: "off" , class:"form-control" %></div>
                  </div>
                  <div class="form-group row"><label class="col-lg-2 control-label">Password Confirmation</label>
      
                      <div class="col-lg-10"><%= f.password_field :password_confirmation, required: true, autocomplete: "off" , class:"form-control" %></div>
                  </div>
                  <div class="form-group row">
                      <div class="col-lg-offset-2 col-lg-10">
                        <%= f.submit "Sign Up", class:"btn btn-primary" %>
                      </div>
                  </div>
                  <hr>
                 <center><span>Already have an account?</span> <a href="/users/sign_in" class="btn btn-link">Login</a></center> 
              <% end %>
          </div>
        </div>
      </div>
    </div>
    
 
  </div>
</div>
