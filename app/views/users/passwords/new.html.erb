<div class="container-fluid container-top" style="">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h5>Não se recorda da password?</h5>
          </div>
          <div class="ibox-content">
              <%= form_for(resource, as: resource_name,  url: registration_path(resource_name),class:"form-horizontal") do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group row">
                    <%= f.label :email, class: "col-lg-2 control-label" %>
      
                      <div class="col-lg-10">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                      </div>
                  </div>
                  <div class="form-group row">
                      <div class="col-lg-offset-2 col-lg-10">
                         <%= f.submit "Solicitar instruções de recuperação", class:"btn btn-sm w-150 btn-primary" %>
                      </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>