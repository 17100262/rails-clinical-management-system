<div class="container-fluid container-top" style="">
  <div class="container">
    <div class="row">
        <div class="table-responsive project-list">
          <table class="table white-bg border-left-right border-top-bottom">
            <thead>
              <tr class="bg-primary">
                <!--<th>#</th>-->
                <th></th>
                <th>Nome</th>
                <th>Tipo de utilizador</th>
                <th>Email</th>
                <th class="actions">Acções</th>
              </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    
                    <tr class="users-tr">
                        <td class="client-avatar"><img alt="image" src="<%= user.profile_picture.url(:thumb) %>"> </td>
                        <td> <%= link_to ((user.name.nil? or user.name.blank?) ? "Não fornecido": user.name),profile_user_path(user) %> </td>
                        <td> <%= (user.user_type.nil? or user.user_type.blank?) ? "Não fornecido": user.user_type %> </td>
                        <td> <%= user.email %> </td>
                        <td><%= link_to '<i class="fas fa-paper-plane" style="font-size: 19px" title="Enviar mensagem"></i>'.html_safe, chats_path({user_id: user.id}),method: :post, class: "icon-chat" %></td>
                    </tr>
                <% end %>
              
            </tbody>
          </table>
        </div>
      <!--</main>-->
    </div>
</div>
</div>
</div>