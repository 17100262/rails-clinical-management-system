<div class="container-fluid container-top" style="">
<div class="row wrapper border-bottom white-bg  page-heading">
    <div class="col-lg-10">
        <h2>Notes</h2>
    </div>
    <div class="col-lg-2">
        <%= link_to 'New Note', new_user_note_path(current_user), class:"btn btn-primary m-t-sm" %>
    </div>
</div>    
  <p id="notice"><%= notice %></p>
  <div class="container">


      <div class="row m-t-md">
        <% @notes.each do |note| %>
              <div class="col-md-3 sm-6">
                  <div class="panel panel-primary notes">
                      <div class="panel-heading">
                        <div class="ibox-tools" style="display: inline-block; float: right;">
                          <a data-toggle="modal" data-target="#show<%= note.id %>">
                              <i class="fa fa-eye"></i>
                          </a>
                          <a data-toggle="modal" data-target="#edit<%= note.id %>">
                              <i class="fa fa-pencil"></i>
                          </a>
                          <%= link_to "<i class='fa fa-times'></i>".html_safe, note, method: :delete, data: { confirm: 'Are you sure?' } %>
                              
                          
                      </div>
                         <%= note.title %>
                      </div>
                      <div class="panel-body">
                          <p><%= note.description %></p>
                      </div>
                  </div>
              </div>
              <div class="modal inmodal" id="show<%= note.id %>" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated flipInY">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title"><%= note.title %></h4>
                            
                        </div>
                        <div class="modal-body">
                            <p><%= note.description %></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal inmodal" id="edit<%= note.id %>" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated flipInY">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title">Edit</h4>
                        </div>
                        <div class="" style="margin-bottom: 1px;">
                            <%= render partial: 'notes/form', locals:{note: note} %>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        <% end %>
      </div>
</div>
</div>



