
    <div class="row">
      
      <div class="col-md-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h5>Add New Note</h5>
          </div>
          <div class="ibox-content">
            <%= form_for [current_user,note], class:"form-horizontal" do |form| %>
              <% if note.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
            
                  <ul>
                  <% note.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

                  
                  <div class="form-group row"><label class="col-lg-2 control-label">Title</label>
      
                      <div class="col-lg-10"><%= form.text_field :title, id: :note_title ,class:"form-control", required: true %>
                      </div>
                  </div>
                  <div class="form-group row"><label class="col-lg-2 control-label">Description</label>
      
                      <div class="col-lg-10"><%= form.text_area :description, id: :note_description,class:"form-control" %>
                      </div>
                  </div>
                  
                  
                  <div class="form-group row">
                      <div class="col-lg-offset-2 col-lg-10">
                        <%= form.submit "Add new note", class:"btn btn-primary" %>
                      </div>
                  </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>


  




